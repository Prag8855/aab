{% extends "_layout.html" %}
{% set metatitle = entry.title %}
{% set metadescription = entry.description %}

{% block postHead %}
    {{ super() }}
    <link rel="index" href="{{ site_url }}/guides">
{% endblock %}

{% block main %}
    <main aria-label="Main page">
        <header class="section transparent fixed-width intro centred">
            <h1>{{ entry.title }}</h1>
            {% if entry.description %}<p>{{ entry.description }}</p>{% endif %}
        </header>
        <div class="section fixed-width" role="list" aria-label="Guides in this collection"> 
            {% with showDateUpdated=true %}
                {% for guide in entry.related_guides|default([]) %}
                    {% with entry=guide %}
                        {% include "blocks/_guidePreview.html" %}
                    {% endwith %}
                {% endfor %}
            {% endwith %}
        </div>
        <nav class="fixed-width pagination">
            <a rel="index" href="{{ site_url }}/guides">â—‚ Back to all guides</a>
        </nav>
    </main>
{% endblock %}
