{% extends "_layout.html" %}
{% set metatitle = "Glossary" %}
{% set metadescription = "A glossary of the terms used on All About Berlin." %}

{% block postHead %}
	{{ super() }}
	<meta property="og:type" content="website">
	<meta property="og:title" content="{{ metatitle }}">
	<meta property="og:description" content="{{ metadescription }}">
	<link rel="canonical" href="{{ site_url }}/glossary">
{% endblock %}

{% set ns = namespace(currentLetter=None) %}
{% set groups = glossary_groups(get_entries('glossary'))|dictsort %}

{% block precontent %}
    <header class="intro">
        <h1>Glossary</h1>
    </header>
{% endblock %}

{% block content %}
    <nav class="glossary-sections">
		{% for group_name, entries in groups %}
			<a href="#letter-{{ group_name }}">{{ group_name }}</a>
		{% endfor %}
    </nav>
	<nav class="collections">
		{% for group_name, entries in groups %}
			<div class="collection" id="letter-{{ group_name }}">
				<h3>{{ group_name }}</h3>
				<ol>
					{% for entry in entries %}
						<li>
							<a title="Definition of {{ entry.german_term }}" rel="tag" href="{{ entry.url }}">{{ entry.german_term }}</a>
						</li>
					{% endfor %}
				</ol>
			</div>
		{% endfor %}
	</nav>
	{% include "js/masonry.js" %}
{% endblock %}
