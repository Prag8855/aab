<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>All About Berlin guides</title>
    <link>{{ site_url }}/guides</link>
    <atom:link href="{{ site_url }}/guides/feed.rss" rel="self" type="application/rss+xml" />
    <description>All About Berlin's most recent guides</description>
    <language>en</language>
    <pubDate>{{ now.strftime("%a, %d %b %Y %H:%M:%S") }} +0100</pubDate>
    <lastBuildDate>{{ now.strftime("%a, %d %b %Y %H:%M:%S") }} +0100</lastBuildDate>

    {% for entry in get_entries('guides', sort_by='date_created', reverse=True) %}
      <item>
        <title>{{ entry.title }}</title>
        <link>{{ entry.url }}</link>
        <pubDate>{{ entry.date_created.strftime("%a, %d %b %Y %H:%M:%S") }} +0100</pubDate>
        <author>contact@allaboutberlin.com (Nicolas Bouliane)</author>
        <guid>{{ entry.url }}</guid>
        <description>
          <![CDATA[{{ entry.description }}]]>
        </description>
      </item>
    {% endfor %}
  </channel>
</rss>
