<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>All About Berlin newsletter</title>
        <link>{{ site_url }}/newsletter</link>
        <atom:link href="{{ site_url }}/newsletter/feed.rss" rel="self" type="application/rss+xml" />
        <description>Berlin news in English, useful tips and website updates, delivered straight to your inbox.</description>
        <language>en</language>
        <pubDate>{{ now.strftime("%a, %d %b %Y %H:%M:%S") }} +0100</pubDate>
        <lastBuildDate>{{ now.strftime("%a, %d %b %Y %H:%M:%S") }} +0100</lastBuildDate>

        {% for entry in get_entries('newsletter', sort_by='date_created', reverse=True) %}
            <item>
                <title>{{ entry.title }}</title>
                <link>{{ entry.url }}</link>
                <pubDate>{{ entry.date_created.strftime("%a, %d %b %Y %H:%M:%S") }} +0100</pubDate>
                <author>contact@allaboutberlin.com (Nicolas Bouliane)</author>
                <guid>{{ entry.url }}</guid>
                <description>
                    <![CDATA[{{ entry.body|render|safe }}]]>
                </description>
            </item>
        {% endfor %}
    </channel>
</rss>
